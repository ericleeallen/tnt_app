<div class="mboxDefault">
        <div class="hero-unit">
          <h1>Welcome to Ear City!</h1>
          <p>The home of headphone greatness. Make sure to check out our product reviews and find the right product for your lifestyle and budget.</p>
        </div>
      </div>
      <script type="text/javascript">
        mboxCreate('tntapp_hero')  
      </script>
   

<div class="container">
	<div class="row">
		<% @products.each do |product| %>
			<div class="span4">
				<%= image_tag(product.image_url) %>
				<h3><%= product.title %></h3>
				<%= sanitize(product.description) %>
				<div class="price_line">
					<span class="price"><%=product.price %></span>
				</div>
			</div>
		<% end %>
	</div>
</div>